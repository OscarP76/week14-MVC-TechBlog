
{{#each blogs as |blog| }}
<div class="row mb-4 blog">
  <div class="col-md-5">
    <h2>
      <a href="/blog/{{blog.id}}">{{blog.title}}</a>
    </h2>
  
    <p>Blog Author {{blog.user.username}} on {{format_date blog.dateCreated}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blog.contents}}
    </p>
  </div>
</div>
        {{#each comments}}
          <p>{{comment}} {{format_date dateCreated}} {{user.username}}</p>
        {{/each}}
{{/each}}
